<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="152dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/account_icon"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:maxLength="12"
                android:id="@+id/first_name_text"
                android:background="@drawable/cursor_drawable"
                android:hint=" First Name"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="60dp"
                android:layout_width="150dp"
                android:layout_height="40dp"/>

            <EditText
                android:maxLength="9"
                android:id="@+id/last_name_text"
                android:background="@drawable/cursor_drawable"
                android:hint=" Last Name"
                android:layout_width="100dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/user_icon"
                    android:layout_marginBottom="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/email_icon"
                    android:layout_marginBottom="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/phone_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/lock_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/lockcheck_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/user_name_text"
                    android:maxLength="12"
                    android:background="@drawable/cursor_drawable"
                    android:hint=" Username(ID)"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="220dp"
                    android:layout_height="40dp"/>

                <EditText
                    android:id="@+id/email_text"
                    android:background="@drawable/cursor_drawable"
                    android:hint=" Email"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="220dp"
                    android:layout_height="40dp"/>

                <EditText
                    android:id="@+id/phone_num_text"
                    android:background="@drawable/cursor_drawable"
                    android:hint=" Tel. Number"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="220dp"
                    android:layout_height="40dp"/>

                <EditText
                    android:id="@+id/edit_up_pw"
                    android:inputType="textPassword"
                    android:background="@drawable/cursor_drawable"
                    android:hint=" Password"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="220dp"
                    android:layout_height="40dp"/>

                <EditText
                    android:id="@+id/edit_up_pw2"
                    android:inputType="textPassword"
                    android:background="@drawable/cursor_drawable"
                    android:hint=" Confirm Password"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="220dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/id_check_btn"
                    android:text="id check"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/ediya_btn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="70dp"
                    android:layout_width="55dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/phone_check"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="55dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/pw_check"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="55dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:textAlignment="center"
                    android:id = "@+id/pw_confirm"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="55dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/goback_btn"
                android:id="@+id/signup_cancel_btn"
                android:layout_marginTop="10dp"
                android:text="cancel"
                android:textColor="@color/ediyacolor"
                android:layout_marginLeft="65dp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <Button
                android:id="@+id/confirm_btn"
                android:layout_marginTop="10dp"
                android:text="confirm"
                android:textColor="@color/white"
                android:background="@drawable/ediya_btn"
                android:layout_marginLeft="70dp"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>