                android:text="ADE"
                android:textColor="@color/white" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="#000080"
                android:text="SHAKE"
                android:textColor="@color/white" />


            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="#000080"
                android:text="FLATCINO"
                android:textColor="@color/white" />


