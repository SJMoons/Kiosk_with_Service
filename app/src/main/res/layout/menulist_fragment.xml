                    android:text="Condensed milk cafe latte"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="￦ 3800"
